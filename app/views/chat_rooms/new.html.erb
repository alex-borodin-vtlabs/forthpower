<h1>Add chat room</h1>

<%= form_for @chat_room do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :post %>
    <%= f.text_area :post, class: 'form-control', id: 'post' %>
  </div>
  <%= f.submit "Add!", class: 'btn btn-primary' %>
<% end %>
